        var doy = DateTime.Today.DayOfYear; // 1..365/366
        todayIndex = (doy - 1) % acciones.Length;
        todayNumber = todayIndex + 1;
    }

    private async Task ScrollToTodayAsync()
    {
        await JS.InvokeVoidAsync("scrollHelpers.scrollIntoViewElement", todayElement);
    }
}

<div class="mt-3">
    <h5>Calendario presencial</h5>
    <p class="small">Día actual: @todayNumber. Enfoque: calidad de presencia y servicio.</p>
    <button class="btn btn-sm btn-outline-primary mb-2" @onclick="ScrollToTodayAsync">Ir al día de hoy</button>
    <ol class="list-group list-group-numbered">
        @for (var i = 0; i < acciones.Length; i++)
        {
            var isToday = i == todayIndex;
            var itemClass = isToday ? "list-group-item d-flex justify-content-between align-items-center active" : "list-group-item d-flex justify-content-between align-items-center";
            if (isToday)
            {
                <li @ref="todayElement" class="@itemClass">
                    <span>@acciones[i]</span>
                    <span class="badge bg-light text-dark">Hoy</span>
                </li>
            }
            else
            {
                <li class="@itemClass">
                    <span>@acciones[i]</span>
                </li>
            }
        }
    </ol>
</div>

