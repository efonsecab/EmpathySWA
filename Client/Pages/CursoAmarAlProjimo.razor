<!-- Semana 1 -->
<div class="card mb-2">
    <div class="card-header">
        <button class="btn btn-link text-decoration-none w-100 text-start" @onclick="() => Toggle(ref w1)">
            Semana 1 · Introducción, empatía y preguntas de conciencia
            <span class="float-end bi @(w1 ? "bi-chevron-up" : "bi-chevron-down")"></span>
