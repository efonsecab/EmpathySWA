    // Modelo para tabla editable de mapeo dones → voluntariado / laboral
    private class DonMapa
    {
        public string Don { get; set; } = string.Empty; // Don o sensibilidad emergente
        public string HeridaAsociada { get; set; } = string.Empty; // Herida que dio origen (breve)
        public string Voluntariado { get; set; } = string.Empty; // Área concreta de servicio
        public string AccionVoluntariado { get; set; } = string.Empty; // Primera micro‑acción
        public string RolLaboral { get; set; } = string.Empty; // Rol/función profesional aplicable
        public string AccionLaboral { get; set; } = string.Empty; // Acción inicial en contexto laboral
        public string Indicadores { get; set; } = string.Empty; // Métricas simples (2 máximo)
    }

    private List<DonMapa> filas = new();
    private const string StorageKey = "cursoAmarProjimo_donesMapa_v1";
    private bool cargado;
    private string? mensajeGuardado;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await CargarAsync();
            StateHasChanged();
        }
    }

    private DonMapa NuevaFila() => new DonMapa
    {
        Don = string.Empty,
        HeridaAsociada = string.Empty,
        Voluntariado = string.Empty,
        AccionVoluntariado = string.Empty,
        RolLaboral = string.Empty,
        AccionLaboral = string.Empty,
        Indicadores = string.Empty
    };

    private void AgregarFila()
    {
        filas.Add(NuevaFila());
    }

    private void EliminarFila(int index)
    {
        if (index >= 0 && index < filas.Count)
            filas.RemoveAt(index);
    }

    private async Task GuardarAsync()
    {
        var json = System.Text.Json.JsonSerializer.Serialize(filas);
        await JS.InvokeVoidAsync("localStorage.setItem", StorageKey, json);
        mensajeGuardado = $"Guardado {DateTime.Now:HH:mm:ss}";
    }

    private async Task CargarAsync()
    {
        try
        {
            var json = await JS.InvokeAsync<string?>("localStorage.getItem", StorageKey);
            if (!string.IsNullOrWhiteSpace(json))
            {
                var datos = System.Text.Json.JsonSerializer.Deserialize<List<DonMapa>>(json);
                if (datos != null) filas = datos;
            }
            if (filas.Count == 0)
            {
                // Plantilla inicial de 3 filas
                filas = new List<DonMapa>
                {
                    new DonMapa{Don="Escucha profunda", HeridaAsociada="Duelo", Voluntariado="Grupo de duelo", AccionVoluntariado="Facilitar círculo 10min escucha", RolLaboral="Atención cliente", AccionLaboral="Aplicar protocolo escuchar‑reencuadrar", Indicadores="NPS, recontactos"},
                    new DonMapa{Don="Hospitalidad segura", HeridaAsociada="Rechazo social", Voluntariado="Bienvenida", AccionVoluntariado="Crear saludo personalizado", RolLaboral="Facilities", AccionLaboral="Rediseñar sala espera", Indicadores="Satisfacción, tiempo espera"},
                    new DonMapa{Don="Mediación de conflictos", HeridaAsociada="Abuso emocional", Voluntariado="Comité paz", AccionVoluntariado="Registrar acuerdos en acta", RolLaboral="Ombudsperson", AccionLaboral="Estandarizar formato mediación", Indicadores="Reincidencia, tiempo resolución"}
                };
            }
            cargado = true;            
        }
        catch (Exception ex)
        {
            mensajeGuardado = "Error al cargar: " + ex.Message;
        }
    }

    private async Task LimpiarAsync()
    {
        filas.Clear();
        await JS.InvokeVoidAsync("localStorage.removeItem", StorageKey);
        mensajeGuardado = "Se limpió el mapeo";
    }
}

